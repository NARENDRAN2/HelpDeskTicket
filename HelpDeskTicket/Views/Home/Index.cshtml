@model HelpDeskTicket.Models.TicketModel

@{
    ViewData["Title"] = "Index";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>


<div class="container">
    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
    </div>

    <div class="container" id="dashboard">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-3">
                <div class="card" id="submit-tickets">
                    <div class="card-header">
                        <strong>Submit</strong> Tickets
                    </div>

                    <div class="container">
                        <div class="row justify-content-center">
                            <a asp-controller="Tickets" asp-action="Create" class="btn btn-primary">Submit</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card" id="unresolved-tickets">
                    <div class="card-header">
                        <strong>Unresolved</strong> Tickets
                    </div>
                    <div class="container" id="index-page-unresolved-tickets>
                        <div class="row justify-content-center">
                            <div class="stat-digit">
                                <i class="fa fa-ticket" aria-hidden="true"></i>
                                0
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card" id="tickets-in-progress">
                    <div class="card-header">
                        <strong>Tickets</strong> in progress
                    </div>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="stat-digit">
                                <i class="fa fa-ticket" aria-hidden="true"></i>
                                0
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card" id="my-tickets">
                    <div class="card-header">
                        <strong>My</strong> Tickets
                    </div>
                    <div class="container">
                        <div class="row justify-content-center">
                            <a asp-controller="Tickets" asp-action="MyTickets" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
